  <div class='card'>
    <figure>
      <img src='{{itemImage}}' alt='beer' />
    </figure>
    <section class='cardDetails'>
      <div class='minDetails'>
        <h1 class='cardHeading'>{{itemName}}-
          <span>{{itemProducer}}-</span>
        </h1>
        <h1 class='cardPrice'>{{itemPrice}}€</h1>
      </div>

      <div class='options'>
        <div class='optionsAmmount'>
          <h1 class='cardHeading'>Anzahl</h1>
          <ul>
            <li>1</li>
            <li>6</li>
            <li>12</li>
            <li>24</li>
          </ul>
        </div>
      </div>
      <a href='#' class='cardButton'>Hinzufügen</a>
    </section>
  </div>